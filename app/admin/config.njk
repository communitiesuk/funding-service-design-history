---
layout: false
permalink: admin/config.yml
eleventyExcludeFromCollections: true
---

backend:
  # Use netlify identity as backend
  name: git-gateway
  branch: main
  repo: communitiesuk/funding-service-design-history
  ### enable below lines for github integration ###
  # name: github
  # repo: communitiesuk/funding-service-design-history
site_url: https://funding-service-design-history.netlify.app/
media_folder: "app/images/uploads"
public_folder: "uploads"
logo_url: /logo.svg

# Please run "npx netlify-cms-proxy-server" for local backend
# local_backend: true
# publish_mode: editorial_workflow
collections:
  - label: "Pre-award"
    name: "pre-award"
    folder: "app/posts/pre-award"
    create: true
    editor:
      preview: true
    fields:
      - { label: "Title", name: "title", widget: "string" }
      - { label: "Description", name: "description", widget: "string" }
      - { label: "Author", name: "author", widget: "string" }
      - { label: "Publish Date", name: "date", widget: "datetime" }
      - { label: "Body", name: "body", widget: "markdown" }
      - widget: select
        label: "Tags"
        name: "tags"
        multiple: true
        create: true
        options: ["learn", "pre-award", "post-award", "service-offer"]
      - widget: select
        label: "Users"
        name: "users"
        multiple: true
        create: true
        options: ["applicants", "assessors", "fund-policy"]
  - label: "Post-award"
    name: "post-award"
    folder: "app/posts/post-award"
    create: true
    editor:
      preview: true
    fields:
      - { label: "Title", name: "title", widget: "string" }
      - { label: "Description", name: "description", widget: "string" }
      - { label: "Author", name: "author", widget: "string" }
      - { label: "Publish Date", name: "date", widget: "datetime" }
      - { label: "Body", name: "body", widget: "markdown" }
      - widget: select
        label: "Tags"
        name: "tags"
        multiple: true
        create: true
        options: ["learn", "pre-award", "post-award", "service-offer"]
      - widget: select
        label: "Users"
        name: "users"
        multiple: true
        create: true
        options: ["applicants", "assessors", "fund-policy"]
  - label: "Service offer"
    name: "service-offer"
    folder: "app/posts/service-offer"
    create: true
    editor:
      preview: true
    fields:
      - { label: "Title", name: "title", widget: "string" }
      - { label: "Description", name: "description", widget: "string" }
      - { label: "Author", name: "author", widget: "string" }
      - { label: "Publish Date", name: "date", widget: "datetime" }
      - { label: "Body", name: "body", widget: "markdown" }
      - widget: select
        label: "Tags"
        name: "tags"
        multiple: true
        create: true
        options: ["learn", "pre-award", "post-award", "service-offer"]
      - widget: select
        label: "Users"
        name: "users"
        multiple: true
        create: true
        options: ["applicants", "assessors", "fund-policy"]
  - label: "Settings"
    name: "settings"
    editor:
      preview: false
    files:
      - label: "Navigation"
        name: "items"
        file: "src/_data/navigation.yaml"
        fields:
          - label: Nav Items
            name: items
            widget: list
            allow_add: false
            collapsed: false
            fields:
              - { label: Title, name: text, widget: string }
              - { label: URL, name: url, widget: string }
      - label: "Quick Links"
        name: "links"
        file: "src/_data/quicklinks.yaml"
        fields:
          - label: Nav Items
            name: links
            widget: list
            collapsed: false
            fields:
              - { label: Title, name: title, widget: string }
              - { label: URL, name: url, widget: string }
              - { label: Description, name: desc, widget: string }
      - label: "Meta Settings"
        name: "settings"
        file: "src/_data/settings.yaml"
        fields:
          - { label: Name, name: name, widget: string }
          - { label: Author, name: author, widget: string }
          - { label: URL, name: url, widget: string }